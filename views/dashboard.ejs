<%- include ('./partials/header') -%> 
<body>
    <section id = "header">
        <nav class="navbar navbar-expand-sm bg-light" id="navigation-bar">
            <div class="container-fluid">
                <span class="navbar-brand mb-01 h2" id="logo">Password Locket</span>

                  <div class="navbar-headers_2 container justify-content-center">
                    <ul class="navbar-nav flex-fill w-100 flex-nowrap">
                      <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-solid fa-bookmark"> </i>
                                <span class ="label">Favorites</span>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-solid fa-user">
                            </i>
                            <span class ="label" >Profile</span>     
                        </a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="#">
                            
                            <form action="/logout?_method=DELETE" method="POST">
                                <button class="btn btn-primary" type="submit">Logout</button>
                            </form>
                        </a>
                      </li>
                    
                    </ul>
                  </div>
                
            </div>
        </nav>

    </section>

    <section id="password_cards">

            
                    
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% services.forEach((service) => { %>
                <div class="col">
                    <div class="card mb-3 w-55" >
                        <div class="card-body">
                        <h5 class="card-title"><i class="fa-brands fa-<%= service.brandname %> "></i></i><%= service.serviceName %> </h5>
                        <p class ="username-input"><span class="username-header">Username:</span><%= service.username %><span class="username"></span></p>
                        <div class="mb-3 ">
                            <label for="password " class="password-label ">Password:  <span class="password_font"><%= service.password %></span> </label>

                        </div>
                        <a href="#" class="btn btn-primary" id="password_reveal">Show</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div> 
        
               
    </section>
    

    <script src ="dashboard.js" charset="UTF-8" defer></script>
</body>
</html>